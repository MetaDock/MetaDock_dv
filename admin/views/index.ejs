<main class="flex-grow flex items-center justify-center p-8">
    <div class="flex flex-col md:flex-row gap-8 lg:gap-16">
        <a href="/admin/search" class="card w-80 lg:w-[400px] h-[400px] selection-card shadow-xl">
            <div class="card-body items-center justify-center text-center gap-8">
                <div class="icon-placeholder download-icon"></div>
                <h2 class="card-title text-2xl font-normal">
                    Install Recommended
                </h2>
            </div>
        </a>

        <a href="/admin/tool_management" class="card w-80 lg:w-[400px] h-[400px] selection-card shadow-xl">
